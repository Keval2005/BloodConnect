<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Signup"
    android:padding="20sp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15sp">
            <ImageButton
                android:id="@+id/signup_back_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25sp"
                android:contentDescription="ok"
                android:backgroundTint="#00FFFFFF"
                android:transitionName="transition_back_arrow_btn"
                android:src="@drawable/back"
                android:padding="5sp"/>


            <TextView
                android:id="@+id/signup_title_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Create Account:"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:layout_marginTop="25sp"
                android:transitionName="transition_title_text" />

        </RelativeLayout>

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical" >

                <com.google.android.material.textfield.TextInputLayout
                    android:drawablePadding="2dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:hint="Full name"
                    app:startIconTint="?attr/colorPrimary"
                    app:startIconDrawable="@drawable/name"
                    android:textColorHint="?attr/colorPrimary"
                    app:shapeAppearance="@style/Rounded"
                    android:layout_marginTop="10sp"
                    android:layout_width="match_parent" >
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="text"
                        android:id="@+id/signup_fullname"/>

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:drawablePadding="2dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    app:startIconDrawable="@drawable/id"
                    android:hint="Username"
                    app:startIconTint="?attr/colorPrimary"
                    android:textColorHint="?attr/colorPrimary"
                    app:shapeAppearance="@style/Rounded"
                    android:layout_marginTop="10sp"
                    android:layout_width="match_parent" >
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="text"
                        android:id="@+id/signup_username"/>

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:drawablePadding="2dp"
                    app:startIconDrawable="@drawable/password"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    app:startIconTint="?attr/colorPrimary"
                    android:textColorHint="?attr/colorPrimary"
                    android:hint="Password"
                    app:passwordToggleEnabled="true"
                    app:shapeAppearance="@style/Rounded"
                    android:layout_marginTop="10sp"
                    android:layout_width="match_parent" >
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="textPassword"
                        android:id="@+id/signup_password"/>

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:drawablePadding="2dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_height="wrap_content"
                    app:startIconDrawable="@drawable/email"
                    app:startIconTint="?attr/colorPrimary"
                    android:textColorHint="?attr/colorPrimary"
                    android:gravity="center_vertical"
                    android:hint="Email ID"
                    app:shapeAppearance="@style/Rounded"
                    android:layout_marginTop="10sp"
                    android:layout_width="match_parent" >
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="textEmailAddress"
                        android:id="@+id/signup_email"/>




                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:drawablePadding="2dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_height="wrap_content"
                    app:startIconDrawable="@drawable/call"
                    android:gravity="center_vertical"
                    app:startIconTint="?attr/colorPrimary"
                    android:textColorHint="?attr/colorPrimary"
                    android:hint="Contact number"
                    app:shapeAppearance="@style/Rounded"
                    android:layout_marginTop="10sp"
                    android:layout_width="match_parent" >
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:maxLength="10"
                        android:inputType="number"
                        android:id="@+id/signup_phone"/>

                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:drawablePadding="2dp"
                    android:layout_height="wrap_content"
                    app:startIconTint="?attr/colorPrimary"
                    android:textColorHint="?attr/colorPrimary"
                    android:gravity="center_vertical"
                    app:startIconDrawable="@drawable/bloodgroup"
                    android:hint="Blood Group"
                    app:shapeAppearance="@style/Rounded"
                    android:layout_marginTop="10sp"
                    android:layout_width="match_parent"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                    <AutoCompleteTextView
                        android:id="@+id/auto_complete_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"/>

                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:drawablePadding="2dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    app:startIconTint="?attr/colorPrimary"
                    android:textColorHint="?attr/colorPrimary"
                    app:startIconDrawable="@drawable/date"
                    android:hint="Birth Date"
                    app:shapeAppearance="@style/Rounded"
                    android:layout_marginTop="10sp"
                    android:layout_width="match_parent" >
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/age_date"
                        android:editable="false"/>
                </com.google.android.material.textfield.TextInputLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/black"
                    android:layout_marginTop="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Choose Gender"
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"
                    android:textSize="18sp"/>
                <RadioGroup
                    android:id="@+id/radio_group"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp">

                    <RadioButton
                        android:id="@+id/male"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Male"/>

                    <RadioButton
                        android:id="@+id/female"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Female"/>
                    <RadioButton
                        android:id="@+id/others"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Other"/>
                </RadioGroup>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/black"
                    android:layout_marginTop="20dp"/>


<!--                <TextView-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:text="Select Your Age"-->
<!--                    android:textColor="@color/black"-->
<!--                    android:textSize="18sp"/>-->
<!--                <DatePicker-->
<!--                    android:id="@+id/age_picker"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:datePickerMode="spinner"-->
<!--                    android:calendarViewShown="false"-->
<!--                    android:spinnersShown="true"/>-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="15sp"
                    android:orientation="horizontal">
                    <com.google.android.material.textfield.TextInputLayout
                        android:drawablePadding="2dp"
                        android:layout_width="0sp"
                        app:startIconTint="?attr/colorPrimary"
                        android:textColorHint="?attr/colorPrimary"
                        android:layout_height="wrap_content"
                        android:hint="File"
                        app:shapeAppearance="@style/Rounded"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_weight="1"
                        >
                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="24sp"
                            android:id="@+id/filename"
                            android:editable="false"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <Button
                        android:layout_width="0sp"
                        android:layout_weight="1"
                        android:padding="8sp"
                        app:shapeAppearance="@style/Rounded"
                        android:layout_marginLeft="8sp"
                        app:icon="@drawable/upload"
                        android:layout_height="wrap_content"
                        android:text="Blood Certificate Upload"
                        app:elevation="10dp"
                        android:id="@+id/btnUpload"
                        android:textSize="15sp"
                        android:textAllCaps="false"
                        android:layout_gravity="center"
                        android:elevation="5sp"
                        />
                </LinearLayout>

                <Button
                    android:id="@+id/btnSignup"
                    android:layout_width="match_parent"
                    app:shapeAppearance="@style/Rounded"
                    android:layout_height="wrap_content"
                    android:text="Submit"
                    app:elevation="10dp"
                    android:textSize="15sp"
                    app:icon="@drawable/submit"
                    android:padding="11sp"
                    android:textAllCaps="false"
                    android:layout_gravity="center"
                    android:elevation="5sp"/>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>

