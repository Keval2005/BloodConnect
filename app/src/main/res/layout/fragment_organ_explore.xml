<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/yo"
    android:background="@color/white"
    tools:context=".Organ_Explore_Fragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15sp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15sp">
            <ImageButton
                android:id="@+id/hospital_back_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:contentDescription="ok"
                android:backgroundTint="#00FFFFFF"
                android:transitionName="transition_back_arrow_btn"
                android:src="@drawable/back"
                android:padding="5sp"/>


            <TextView
                android:id="@+id/hospital_title_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Hospital Info:"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:layout_marginTop="5sp"
                android:transitionName="transition_title_text" />

        </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/blood_bank1"
        android:id="@+id/hospital_img"
        android:layout_gravity="center"
        />


    <com.google.android.material.textfield.TextInputLayout
        android:drawablePadding="2dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:hint="Hospital ID"
        app:startIconTint="?attr/colorPrimary"
        android:textColorHint="?attr/colorPrimary"
        app:startIconDrawable="@drawable/id"
        app:shapeAppearance="@style/Rounded"
        android:layout_marginTop="10sp"
        android:layout_width="match_parent" >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/hospital_ID"
            android:editable="false"/>
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        app:startIconDrawable="@drawable/name"
        android:drawablePadding="2dp"
        app:startIconTint="?attr/colorPrimary"
        android:textColorHint="?attr/colorPrimary"
        app:shapeAppearance="@style/Rounded"
        android:layout_marginTop="10sp"
        android:hint="Hospital Name"
        android:layout_width="match_parent">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/hospital_fullname"
            android:editable="false"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_height="wrap_content"
        android:drawablePadding="9dp"
        app:startIconTint="?attr/colorPrimary"
        app:startIconDrawable="@drawable/locate"
        android:textColorHint="?attr/colorPrimary"
        android:gravity="center_vertical"
        app:shapeAppearance="@style/Rounded"
        android:hint="Hospital Address"
        android:layout_marginTop="10sp"
        android:layout_width="match_parent" >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/hospital_address"
            android:editable="false"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_height="wrap_content"
        app:shapeAppearance="@style/Rounded"
        android:drawablePadding="2dp"
        app:startIconTint="?attr/colorPrimary"
        android:textColorHint="?attr/colorPrimary"
        app:startIconDrawable="@drawable/time"
        android:gravity="center_vertical"
        android:layout_marginTop="10sp"
        android:hint="Open Hours"
        android:layout_width="match_parent">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/hospital_time"
            android:editable="false"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_height="wrap_content"
        app:shapeAppearance="@style/Rounded"
        android:drawablePadding="2dp"
        android:gravity="center_vertical"
        app:startIconTint="?attr/colorPrimary"
        android:textColorHint="?attr/colorPrimary"
        app:startIconDrawable="@drawable/email"
        android:layout_marginTop="10sp"
        android:hint="Email"
        android:layout_width="match_parent">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/hospital_email"
            android:editable="false"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:drawablePadding="2dp"
        android:visibility="invisible"
        android:layout_height="1dp"
        app:boxBackgroundColor="#20D81B60"
        android:gravity="center_vertical"
        android:layout_width="1dp">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/hospital_area"
            android:editable="false"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:drawablePadding="2dp"
        android:visibility="invisible"
        android:layout_height="1dp"
        app:startIconTint="?attr/colorPrimary"
        android:gravity="center_vertical"
        app:boxBackgroundColor="#20D81B60"
        android:layout_width="1dp">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/hospital_contact"
            android:editable="false"/>
    </com.google.android.material.textfield.TextInputLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8sp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/hospital_call"
            android:layout_width="0sp"
            android:layout_weight="1"
            app:shapeAppearance="@style/Rounded"
            android:layout_height="wrap_content"
            android:text="Call"
            app:elevation="10dp"
            android:textSize="15sp"
            android:padding="11sp"
            android:textAllCaps="false"
            android:contentDescription="Enter How Much Cookies You Want"
            android:layout_gravity="center"
            app:icon="@drawable/call"
            android:elevation="5sp"
            />
        <Button
            android:id="@+id/hospital_locate"
            android:layout_width="0sp"
            android:layout_weight="1"
            app:shapeAppearance="@style/Rounded"
            android:layout_height="wrap_content"
            android:padding="11sp"
            android:layout_marginLeft="8sp"
            android:textSize="15sp"
            android:textAllCaps="false"
            android:text="Locate"
            android:contentDescription="Enter How Much Cookies You Want"
            android:layout_gravity="center"
            app:icon="@drawable/map"
            android:elevation="5sp"
            />
    </LinearLayout>
    </LinearLayout>
    </ScrollView>
    </LinearLayout>
</FrameLayout>