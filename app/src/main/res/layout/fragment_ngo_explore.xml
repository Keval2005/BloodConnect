<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/yo"
    android:background="@color/white"
    tools:context=".Ngo_Explore_Fragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15sp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15sp">
            <ImageButton
                android:id="@+id/ngo_back_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:contentDescription="ok"
                android:backgroundTint="#00FFFFFF"
                android:transitionName="transition_back_arrow_btn"
                android:src="@drawable/back"
                android:padding="5sp"/>


            <TextView
                android:id="@+id/ngo_title_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Ngo Info:"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:layout_marginTop="5sp"
                android:transitionName="transition_title_text" />

        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@mipmap/ic_launcher"
                    android:id="@+id/ngo_img"
                    android:layout_gravity="center"
                    />


                <com.google.android.material.textfield.TextInputLayout
                    android:drawablePadding="2dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:hint="Ngo ID"
                    app:startIconDrawable="@drawable/id"
                    app:shapeAppearance="@style/Rounded"
                    android:layout_marginTop="10sp"
                    app:startIconTint="?attr/colorPrimary"
                    android:textColorHint="?attr/colorPrimary"
                    android:layout_width="match_parent" >
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/ngo_ID"
                        android:editable="false"/>
                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:drawablePadding="2dp"
                    android:textColorHint="?attr/colorPrimary"
                    app:shapeAppearance="@style/Rounded"
                    android:layout_marginTop="10sp"
                    app:startIconDrawable="@drawable/name"
                    android:hint="Ngo Name"
                    app:startIconTint="?attr/colorPrimary"
                    android:layout_width="match_parent">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/ngo_fullname"
                        android:editable="false"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_height="wrap_content"
                    android:drawablePadding="9dp"
                    android:gravity="center_vertical"
                    app:startIconDrawable="@drawable/locate"
                    app:shapeAppearance="@style/Rounded"
                    android:textColorHint="?attr/colorPrimary"
                    android:hint="Ngo Address"
                    android:layout_marginTop="10sp"
                    app:startIconTint="?attr/colorPrimary"
                    android:layout_width="match_parent" >
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/ngo_address"
                        android:editable="false"/>
                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_height="wrap_content"
                    app:shapeAppearance="@style/Rounded"
                    app:startIconDrawable="@drawable/email"
                    app:startIconTint="?attr/colorPrimary"
                    android:textColorHint="?attr/colorPrimary"
                    android:drawablePadding="2dp"
                    android:gravity="center_vertical"
                    android:layout_marginTop="10sp"
                    android:hint="Email"
                    android:layout_width="match_parent">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/ngo_email"
                        android:editable="false"/>

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:drawablePadding="2dp"
                    android:visibility="invisible"
                    android:layout_height="1dp"
                    app:boxBackgroundColor="#20D81B60"
                    android:gravity="center_vertical"
                    android:layout_width="1dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/ngo_area"
                        android:editable="false"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:drawablePadding="2dp"
                    android:visibility="invisible"
                    android:layout_height="1dp"
                    android:gravity="center_vertical"
                    app:boxBackgroundColor="#20D81B60"
                    android:layout_width="1dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/ngo_contact"
                        android:editable="false"/>
                </com.google.android.material.textfield.TextInputLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="8sp"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/ngo_call"
                        android:layout_width="0sp"
                        android:layout_weight="1"
                        app:shapeAppearance="@style/Rounded"
                        android:layout_height="wrap_content"
                        android:text="Call"
                        app:elevation="10dp"
                        android:textSize="15sp"
                        android:padding="11sp"
                        android:textAllCaps="false"
                        android:contentDescription="Enter How Much Cookies You Want"
                        android:layout_gravity="center"
                        app:icon="@drawable/call"
                        android:elevation="5sp"
                        />
                    <Button
                        android:id="@+id/ngo_select"
                        android:layout_width="0sp"
                        android:layout_weight="1"
                        app:shapeAppearance="@style/Rounded"
                        android:layout_height="wrap_content"
                        android:padding="11sp"
                        android:layout_marginLeft="8sp"
                        app:icon="@drawable/select_ngo"
                        android:textSize="15sp"
                        android:textAllCaps="false"
                        android:text="Select This"
                        android:contentDescription="Enter How Much Cookies You Want"
                        android:layout_gravity="center"
                        android:elevation="5sp"
                        />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
            </LinearLayout>
</FrameLayout>