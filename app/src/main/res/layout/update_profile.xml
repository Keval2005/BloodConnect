<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="15sp"
        android:id="@+id/scrollView">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/bloodbank_title_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Update Account:"
                    android:textSize="28sp"
                    android:transitionName="transition_title_text" />



            </RelativeLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:drawablePadding="2dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                app:startIconTint="?attr/colorPrimary"
                android:textColorHint="?attr/colorPrimary"
                android:hint="Full name"
                app:startIconDrawable="@drawable/name"
                app:shapeAppearance="@style/Rounded"
                android:layout_marginTop="10sp"
                android:layout_width="match_parent" >
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="text"
                    android:id="@+id/updateacc_fullname"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:drawablePadding="2dp"
                app:startIconTint="?attr/colorPrimary"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:hint="Password"
                android:textColorHint="?attr/colorPrimary"
                app:passwordToggleTint="?attr/colorPrimary"
                app:startIconDrawable="@drawable/password"
                app:hintEnabled="true"
                android:id="@+id/passwordlayout"
                app:shapeAppearance="@style/Rounded"
                android:layout_marginTop="10sp"
                android:layout_width="match_parent" >
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textPassword"
                    android:id="@+id/updateacc_password"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:drawablePadding="2dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                app:startIconTint="?attr/colorPrimary"
                android:textColorHint="?attr/colorPrimary"
                android:hint="Email ID"
                app:shapeAppearance="@style/Rounded"
                android:layout_marginTop="10sp"
                app:startIconDrawable="@drawable/email"
                android:layout_width="match_parent" >
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textEmailAddress"
                    android:id="@+id/updateacc_email"/>




            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:drawablePadding="2dp"
                app:startIconTint="?attr/colorPrimary"
                android:textColorHint="?attr/colorPrimary"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:hint="Contact number"
                app:shapeAppearance="@style/Rounded"
                android:layout_marginTop="10sp"
                app:startIconDrawable="@drawable/call"
                android:layout_width="match_parent" >
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:maxLength="10"
                    android:inputType="number"
                    android:id="@+id/updateacc_phone"/>

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:drawablePadding="2dp"
                app:startIconTint="?attr/colorPrimary"
                android:textColorHint="?attr/colorPrimary"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:hint="Blood Group"
                app:shapeAppearance="@style/Rounded"
                android:layout_marginTop="10sp"
                android:layout_width="match_parent"
                app:startIconDrawable="@drawable/bloodgroup"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                <AutoCompleteTextView
                    android:id="@+id/auto_complete_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"/>

            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:drawablePadding="2dp"
                app:startIconTint="?attr/colorPrimary"
                android:textColorHint="?attr/colorPrimary"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:hint="Birth Date"
                app:startIconDrawable="@drawable/date"
                app:shapeAppearance="@style/Rounded"
                android:layout_marginTop="10sp"
                android:layout_width="match_parent" >
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/age_date"
                    android:editable="false"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:drawablePadding="2dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:hint="Gender"
                app:shapeAppearance="@style/Rounded"
                android:layout_marginTop="10sp"
                android:layout_width="match_parent"
                app:startIconDrawable="@drawable/gender"
                app:startIconTint="?attr/colorPrimary"
                android:textColorHint="?attr/colorPrimary"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                <AutoCompleteTextView
                    android:id="@+id/gender_auto_complete_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"/>

            </com.google.android.material.textfield.TextInputLayout>


